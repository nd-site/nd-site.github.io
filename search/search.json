---
layout: null
---
[
  {% for post in site.posts %}
    {
      "title"    : "{{ post.title | escape }}",
      "url"      : "{{ site.baseurl }}{{ post.url }}",
      "description": "{{ post.content | strip_html | truncatewords: 30 | strip_newlines | escape }}",
      "date"     : "{{ post.date | date: "%d/%m/%Y" }}"
    } {% unless forloop.last %},{% endunless %}
  {% endfor %}
  
  {% if site.pages and site.posts %},{% endif %}

  {% for page in site.pages %}
    {% if page.title %}
    {
      "title"    : "{{ page.title | escape }}",
      "url"      : "{{ site.baseurl }}{{ page.url }}",
      "description": "{{ page.content | strip_html | truncatewords: 30 | strip_newlines | escape }}"
    } {% unless forloop.last %},{% endunless %}
    {% endif %}
  {% endfor %}
]
